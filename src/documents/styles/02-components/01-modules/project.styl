.project
  &.sub-primary
    @extend .nest-1
    color black-tint-3
    .section.sub-project:nth-child(odd) &
      figure
        margin-right -50%
        img
          width 100%
          max-width 600px
    .section.sub-project:nth-child(even) &
      .grid-items
        direction rtl
      .col
        direction ltr
        
      .project-body-figure
        text-align right
      figure
        margin-left -50%
        img
          width 100%
          max-width 600px
        
    .project-header
      null
    .project-body-content
      @extend .nest-3
      @extend .pad-b-1
      @media (max-width: 768px)
        padding-bottom 0
      
    .col
      @media (max-width: 768px)
        display block
      
.project-header
  text-align center

.project-header-title
  &.state-hidden
    opacity 0
    position absolute

.project-header-logo
  null
  
.project-body
  null
  
.project-body-content
  vertical-align middle
  
.project-body-figure
  text-align center
  vertical-align bottom
  line-height 0    
