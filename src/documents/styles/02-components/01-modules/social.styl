.social
  display block
  padding 0
  max-width 500px
  margin 0 auto
  
  .col
    width (100/5)%
    @media (max-width: 640px)
      width (100/3)%
  
.social-link
  display block
  font-size 0
  background-size cover
  &:after
    content ''
    padding-top 100%
    display block
    
  &.sub-twitter
    background-image url(img_dir + 'icon-twitter.svg')
  &.sub-dribbble
    background-image url(img_dir + 'icon-dribbble.svg')
  &.sub-linkedin
    background-image url(img_dir + 'icon-linkedin.svg')
  &.sub-rdio
    background-image url(img_dir + 'icon-rdio.svg')
  &.sub-instagram
    background-image url(img_dir + 'icon-instagram.svg')
