- var projects = getCollection("projects").toJSON()
- var figures = getCollection("projectFigures").toJSON()

section.section.sub-megaHello
  .section-content
    .h1.sub-huge
      | Oh,
      br
      | hello.

section.section.sub-intro
  .section-content
    h1 
      | I’m Kelly Tomlinson.
      p: small: em I create engaging experiences for web, ios, brands, and events. 
    p: a.button(href='mailto:hi@kellytdesign.com') hi@kellytdesign.com

.projects
  - for project in projects
    if project.primary == true
      section.section.sub-project(class= "sub-" + project.slug)
        .section-content
          article.project.sub-primary
            .project-header
              if project.title_logo
                img.project-header-logo(src="images/projects/logos/" + project.title_logo, alt= project.title)
                h2.project-header-title.state-hidden= project.title
              else
                h2.project-header-title= project.title
            .project-body
              .grid.auto.spaced: .grid-items
                .col.project-body-content
                  h3.project-body-content-role= project.role
                  .project-body-content-description!= project.contentRendered
                  if project.link.url
                    .project-body-content-link
                      a.button(href=project.link.url target="_blank")= project.link.text
                - for figure in figures
                  if figure.title == project.figure
                    .col.project-body-figure
                      figure(class= "sub-" + figure.title)
                        != figure.contentRendered

section.section.sub-projects.sub-secondary
  .section-content
    .grid.wrapped.spaced: .grid-items
      - for project in projects
        if project.primary == false
          .col
            .project.sub-secondary
              .project-header
                if project.title_logo
                  img.project-header-logo(src="images/projects/logos/" + project.title_logo)
                  h2.project-header-title.state-hidden= project.title
                else
                  h2.project-header-title= project.title
                h3.project-header-role= project.role
              .project-body
                .project-body-content
                  .project-body-content-description!= project.contentRendered
                  if project.link.url
                    .project-body-content-link
                      a.button(href=project.link.url target="_blank")= project.link.text

